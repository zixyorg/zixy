{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsc && tsc-alias",
    "check-types": "tsc --noEmit",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/src/index.js",
    "db:push": "prisma db push --schema ./prisma/schema",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate --schema ./prisma/schema",
    "db:migrate": "prisma migrate dev"
  },
  "prisma": {
    "schema": "./schema"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "zod": "^3.25.16",
    "@trpc/server": "^11.4.2",
    "@trpc/client": "^11.4.2",
    "express": "^5.1.0",
    "cors": "^2.8.5",
    "@prisma/client": "^6.9.0"
  },
  "devDependencies": {
    "tsc-alias": "^1.8.11",
    "typescript": "^5.8.2",
    "@types/express": "^5.0.1",
    "@types/cors": "^2.8.17",
    "@types/bun": "^1.2.6",
    "prisma": "^6.9.0"
  }
}
